#include <msp430.h>
#include <stdint.h>

/*
 * main.c
 */

#define red_LED     0x00000001  //BIT0
#define green_LED   0x00000040  //BIT6
#define DELAYLOOPS  50000

void main(void) {
    WDTCTL = WDTPW | WDTHOLD;	// Stop watchdog timer
	
    //volatile unsigned int LoopCtr;      // Loop counter: volatile!
    volatile uint16_t LoopCtr;

    P1OUT = ~red_LED|green_LED;
    P1DIR = red_LED|green_LED;

    for(;;){
        for (LoopCtr = 0; LoopCtr < DELAYLOOPS; ++ LoopCtr){
        }
        //P1OUT ^= red_LED|green_LED;
        P1OUT ^= BIT0|BIT6;
    }
}
